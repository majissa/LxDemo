<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="LxAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="android:windowSharedElementEnterTransition" tools:targetApi="lollipop">@transition/default_transition</item>
        <item name="android:windowSharedElementExitTransition" tools:targetApi="lollipop">@transition/default_transition</item>
    </style>

    <style name="translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/translucent</item>
        <item name="android:windowIsTranslucent">true</item>//共享元素动画
    </style>


