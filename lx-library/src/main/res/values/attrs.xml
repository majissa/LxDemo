<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LinearDot">
        <attr name="normalDrawable" format="color|reference" />
        <attr name="normalDimension" format="dimension" />
        <attr name="selectedDrawable" format="color|reference" />
        <attr name="selectedDimension" format="dimension" />
        <attr name="intervalDimension" format="dimension" />
        <attr name="dotCount" format="integer" />
    </declare-styleable>

    <declare-styleable name="LinearStars">
        <attr name="maxNum" format="integer" />
        <attr name="hollowStarDrawable" format="color|reference" />
        <attr name="solidStarDrawable" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="RegularTriangleView">
        <attr name="radius" format="dimension" />
        <attr name="triangleFillColor" format="color" />
    </declare-styleable>

    <declare-styleable name="PathDrawView">
        <attr name="pathDrawFillColor" format="color" />
    </declare-styleable>

    <declare-styleable name="PasswordView">
        <attr name="cellWidth" format="dimension" />
        <attr name="cellHeight" format="dimension" />
        <attr name="circleRadius" format="dimension" />
        <attr name="passwordSpaing" format="dimension" />
        <attr name="passwordLength" format="integer" />
    </declare-styleable>

    <declare-styleable name="PasswordEditText">
        <attr name="borderStrokeColor" format="color" />
        <attr name="passwordBackground" format="color" />
        <attr name="borderStrokeWidth" format="dimension" />
        <attr name="borderRadius" format="dimension" />
        <attr name="textWordColor" format="color" />
        <attr name="textWordRadius" format="dimension" />
        <attr name="textWordLength" format="integer" />
    </declare-styleable>

    <declare-styleable name="marqueeView">
        <attr name="speed" format="integer" />
        <attr name="interval" format="integer" />
    </declare-styleable>

    <declare-styleable name="MarqueeLinearLayout">
        <attr name="marquee_speed" format="integer"/>
        <attr name="marquee_interval" format="integer"/>
        <attr name="direction">
            <enum name="up" value="0" />
            <enum name="left" value="1" />
            <enum name="down" value="2" />
            <enum name="right" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CountDownTextView">
        <attr name="duration" format="integer" />
        <attr name="preciseUnit">
            <enum name="year" value="0" />
            <enum name="month" value="1" />
            <enum name="day" value="2" />
            <enum name="hour" value="3" />
            <enum name="minute" value="4" />
            <enum name="second" value="5" />
        </attr>
    </declare-styleable>

    <declare-styleable name="MediaPlayerTextView">
        <attr name="resumeText" format="string" />
        <attr name="pauseText" format="string" />
    </declare-styleable>

    <declare-styleable name="AdapterViewVerticalBanner">
        <attr name="gap" format="integer" />
        <attr name="animDuration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="PullToZoomView">
        <attr name="headerView" format="reference" />
        <attr name="contentView" format="reference" />
        <attr name="zoomView" format="reference" />
        <attr name="isHeaderParallax" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TickView">
        <attr name="roundColor" format="color" />
        <attr name="roundWidth" format="integer" />
        <!--<attr name="zoomView" format="reference" />-->
        <!--<attr name="isHeaderParallax" format="boolean" />-->
    </declare-styleable>

    <declare-styleable name="ExpandableItemView">
        <attr name="expandleView" format="reference" />
        <attr name="NonExpandleView" format="reference" />
        <!--<attr name="isHeaderParallax" format="boolean" />-->
    </declare-styleable>

</resources>