<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialogbg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_dialog_paybycash"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_background_payment"
            android:clickable="true"
            android:gravity="center"
            android:text="dialog_paybycash"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/tv_dialog_changeperice"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/selector_background_payment"
            android:clickable="true"
            android:gravity="center"
            android:text="dialog_changePerice" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tv_cancle"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="0.5dp"
            android:layout_height="45dp"
            android:background="@color/gray" />

        <Button
            android:id="@+id/tv_positive"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>


