<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lx.lxlibrary.view.LinearListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.lx.lxlibrary.view.LinearListView>

    <TextView
        android:id="@+id/acitivity_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_standard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="standard模式" />

    <Button
        android:id="@+id/btn_singTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="singleTask模式" />

    <Button
        android:id="@+id/btn_singleTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="singleTop模式" />

    <Button
        android:id="@+id/btn_singInstance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="singleinstance模式" />

</LinearLayout>